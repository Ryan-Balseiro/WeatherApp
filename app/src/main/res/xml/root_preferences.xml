<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Settings">

        <EditTextPreference
            app:key="zip"
            app:title="Zip code"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Fahrenheit"
            app:entries="@array/temp_scale_entries"
            app:entryValues="@array/temp_scale_values"
            app:key="temp_scale"
            app:title="Temperature scale"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>